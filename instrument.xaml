				<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
				<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="360"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Page.Resources>

