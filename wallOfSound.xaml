      xmlns:local="clr-namespace:Moto" x:Class="Moto.wallOfSound" 
      mc:Ignorable="d" Height="480" Width="640" Visibility="Visible"  KeyDown="Page_KeyDown" Loaded="Page_Loaded" Focusable="True">
    
    <Page.Resources>
        <Storyboard x:Key="cameraCountdown">
